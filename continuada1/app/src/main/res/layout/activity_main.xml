<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuada1 - Calculo de Frequência"
        android:textSize="25sp"
        android:id="@+id/titulo"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome do Aluno"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        android:id="@+id/nome_aluno"
        android:inputType="text"
        ></EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Aulas presentes"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/nome_aluno"
        android:id="@+id/aulas_freq"
        android:inputType="text"
        ></EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Aulas totais"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/aulas_freq"
        android:id="@+id/aulas_totais"
        android:inputType="text"
        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Frequência"
        android:textSize="20sp"
        android:id="@+id/btn_calcular"
        app:layout_constraintTop_toBottomOf="@+id/aulas_totais"
        android:onClick="validaCampos"
        ></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vazio"
        android:textSize="25sp"
        android:id="@+id/aviso"
        app:layout_constraintTop_toBottomOf="@+id/btn_calcular"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>